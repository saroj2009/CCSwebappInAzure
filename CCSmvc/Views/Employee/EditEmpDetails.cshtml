@model CCSmvc1.Models.EmployeeModel

@{
    ViewBag.Title = "EditEmpDetails";
    Layout = "~/Views/Shared/_MasterLayoutPage2.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("EditEmpDetails", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(true)
   
        <legend>Emp Details</legend>
        <table border="1">
            <tr>
                <td>
                    <b>
                        @*@Html.LabelFor(model => model.Id)*@ Emp ID
                    </b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Id)
                </td>
            </tr>
            <tr>
                <td>
                    <b>
                        @Html.LabelFor(model => model.Name)
                    </b>
                </td>
                <td>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    <b>
                        @Html.LabelFor(model => model.Description)
                    </b>
                </td>
                <td>
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <td>
                    <b>
                        @Html.LabelFor(model => model.DOB) (dd/mm/yyyy)
                    </b>
                </td>
                <td>
                    @Html.EditorFor(model => model.DOB)
                    @Html.ValidationMessageFor(model => model.DOB)
                </td>
            </tr>
            <tr>
                <td>
                    <b>
                        Select File:
                    </b>
                </td>
                <td>
                    <input type="file" name="image" id="image" />
                </td>
            </tr>
        </table>
 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="color:green">
                @ViewBag.Message
            </div>
        </div>
        <p align="right" style="padding-right:320px">
            @Html.ActionLink("Back to List", "GetAllEmpDetails")
            <input type="submit" value="Update" />
        </p>
   
}


